

#!/bin/sh



MASTER1={{ redis_cluster_master.node1 }}
MASTER2={{ redis_cluster_master.node2 }}
MASTER3={{ redis_cluster_master.node3 }}

SLAVE1={{ redis_cluster_master.node1 }}
SLAVE2={{ redis_cluster_master.node2 }}
SLAVE3={{ redis_cluster_master.node3 }}

PASSWD=12345

PORT1={{ redis_cluster.port1 }}
PORT2={{ redis_cluster.port2 }}
PORT3={{ redis_cluster.port3 }}


MASTER1_ID=$(redis-cli -a ${PASSWD} --no-auth-warning  -h ${MASTER1}  -p ${PORT1} cluster nodes | awk -F "master" '{ print $1 }' | awk '/{{ redis_cluster_master.node2 }}:{{ redis_cluster.port2 }}@17002/' | awk 'NR==1 {print $1}')
MASTER2_ID=$(redis-cli -a ${PASSWD} --no-auth-warning  -h ${MASTER1}  -p ${PORT1} cluster nodes | awk -F "master" '{ print $1 }' | awk '/{{ redis_cluster_master.node3 }}:{{ redis_cluster.port3 }}@17003/' | awk 'NR==1 {print $1}')
MASTER3_ID=$(redis-cli -a ${PASSWD} --no-auth-warning  -h ${MASTER1}  -p ${PORT1} cluster nodes | awk -F "master" '{ print $1 }' | awk '/{{ redis_cluster_master.node1 }}:{{ redis_cluster.port1 }}@17001/' | awk 'NR==1 {print $1}')


echo  yes | redis-cli -a ${PASSWD} --no-auth-warning --cluster  add-node ${SLAVE3}:${PORT2}  ${MASTER2}:${PORT2} --cluster-slave --cluster-master-id ${MASTER1_ID}
echo  yes | redis-cli -a ${PASSWD} --no-auth-warning --cluster  add-node ${SLAVE1}:${PORT3}  ${MASTER3}:${PORT3} --cluster-slave --cluster-master-id ${MASTER2_ID}
echo  yes | redis-cli -a ${PASSWD} --no-auth-warning --cluster  add-node ${SLAVE2}:${PORT1}  ${MASTER1}:${PORT1} --cluster-slave --cluster-master-id ${MASTER3_ID}








